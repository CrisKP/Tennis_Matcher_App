<div id="user_profile">
  <h1>My Profile</h1>
  <div id="user_info">
    <%= link_to image_tag(@user.image.url(:large)), @user.image.url %>
    <div id="user_data">
      <p><strong>First Name:</strong> <%=current_user.first_name%></p>
      <p><strong>Last Name:</strong> <%=current_user.last_name%></p>
      <p><strong>Email:</strong> <%=current_user.email%></p>
      <p><strong>Skill Level:</strong>

      <form class="" action="index.html" method="post">
          <div class="form-group">
            <select class="custom-select">
              <option selected="">Skill Level</option>
              <option value="1">Beginner</option>
              <option value="2">Intermediate</option>
              <option value="3">Advanced</option>
            </select>
           </div>
      </form>
      </p>
      <br/>
      <br/>
    </div>
  </div>
    <div id="availability">
      <h2>Select your availability</h2>
    </div>


</div>
